@model IEnumerable<Club>

@{
    ViewData["Title"] = "Club";
}

<div class="col-12 col-md-6 col-lg-5 section-intro">
    <h1 class="display-3">Find a running group</h1>
    <span class="lead">
        A community of devoted runners, passionate about running and life. Ready to find your accountability partner?
    </span>
</div>
<div class="row">
    @foreach(var item in Model)
    {
        <div class="col-md-3">
            <div class="card shadow-sm">
                <img class="card-img-top" src="@item.Image" height="225" alt="Card image"/>
                <div class="card-body">
                    <p class="card-text">@item.Title</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-body-secondary">@item.ClubCategory</small>
                    </div>
                </div>
            </div>
        </div>
            }
</div>
